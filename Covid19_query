--Covid-19 DDL script

CREATE DATABASE COVID_Backend_GroupH;
Go
USE COVID_Backend_GroupH;
Go

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_AgeCategory 
FOREIGN KEY (AgeId) REFERENCES AgeCategory(AgeId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Contact 
FOREIGN KEY (contId) REFERENCES Contact(contId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Country 
FOREIGN KEY (ctryId) REFERENCES Country(ctryId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Gender 
FOREIGN KEY (genId) REFERENCES Gender(genId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Patient 
FOREIGN KEY (PatId) REFERENCES Patient(PatId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Contact 
FOREIGN KEY (contId) REFERENCES Contact(contId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientDetails 
ADD CONSTRAINT FK_PatientDetails_Severity 
FOREIGN KEY (servId) REFERENCES Severity(servId) 
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientSymptoms
ADD CONSTRAINT FK_PatientSymptoms_Symptom
FOREIGN KEY (sympId) REFERENCES Symptom(sympId)
ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE PatientSymptoms
ADD CONSTRAINT FK_PatientSymptoms_PatientDetails
FOREIGN KEY (pdId) REFERENCES PatientDetails(pdId)
ON DELETE CASCADE ON UPDATE CASCADE;

